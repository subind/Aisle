<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="width_match_height_match_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="tv_primary_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_primary</item>
    </style>

    <style name="tv_secondary_title_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:lines">2</item>
    </style>
    
    <style name="btn_yellow_rounded_corner_style">
        <item name="android:layout_width">@dimen/btn_continue_width</item>
        <item name="android:layout_height">@dimen/btn_continue_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textSize">@dimen/btn_continue_txt_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_rounded_corner_btn</item>
    </style>

    <style name="et_country_code_style">
        <item name="android:layout_width">@dimen/et_country_code_width</item>
        <item name="android:layout_height">@dimen/et_country_code_height</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">4</item>
        <item name="android:digits">+1234567890</item>
        <item name="android:background">@drawable/bg_rounded_corner_et</item>
    </style>

    <style name="et_ph_number_style">
        <item name="android:layout_width">@dimen/et_ph_number_width</item>
        <item name="android:layout_height">@dimen/et_ph_number_height</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
        <item name="android:digits">1234567890</item>
        <item name="android:background">@drawable/bg_rounded_corner_et</item>
        <item name="android:paddingStart">@dimen/et_ph_number_left_right_padding</item>
        <item name="android:paddingEnd">@dimen/et_ph_number_left_right_padding</item>
        <item name="android:paddingTop">@dimen/et_ph_number_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/et_ph_number_top_bottom_padding</item>
    </style>

    <style name="et_otp_style">
        <item name="android:layout_width">@dimen/et_otp_width</item>
        <item name="android:layout_height">@dimen/et_otp_height</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">4</item>
        <item name="android:gravity">end</item>
        <item name="android:background">@drawable/bg_rounded_corner_et</item>
    </style>

    <style name="tv_otp_count_down_style">
        <item name="android:layout_width">@dimen/tv_otp_count_down_width</item>
        <item name="android:layout_height">@dimen/tv_otp_count_down_height</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tv_otp_count_down_text_size</item>
    </style>

    <style name="iv_edit_style">
        <item name="android:layout_width">@dimen/iv_edit_width_height</item>
        <item name="android:layout_height">@dimen/iv_edit_width_height</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
</resources>